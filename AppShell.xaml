<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EindExamenMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EindExamenMaui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="EindExamenMaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />  
    <ShellContent
        Title="Dieren"
        ContentTemplate="{DataTemplate views:DierPage}"
        Route="DierPage" />
    <ShellContent
        Title="Overzicht"
        ContentTemplate="{DataTemplate views:EigenaarOverzichtPage}"
        Route="EigenaarOverzichtPage" />

</Shell>
